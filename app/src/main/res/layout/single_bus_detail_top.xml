<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:layout_marginBottom="10dp"
    android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/left_linear_layout">

            <TextView
                android:id="@+id/busNameText"
                android:fontFamily="@font/lato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="17sp"
                android:text="Tata 2209 1st Level"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/departingTimeText"
                android:fontFamily="@font/lato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Travel date : 12:00 AM"/>

                <TextView
                    android:textSize="12sp"
                    android:layout_below="@+id/image_route_icon"
                    android:fontFamily="@font/lato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:id="@+id/text_from_route"
                    android:text="Origin: Jimma"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_to_route"
                    android:layout_alignParentRight="true"
                    android:text="Destination: Addis Ababa"
                    android:fontFamily="@font/lato"/>

            <TextView
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_seats_available"
                android:layout_alignParentRight="true"
                android:text="Seats Available: 60"
                android:fontFamily="@font/lato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/ticketPriceText"
                android:fontFamily="@font/lato"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="#fff"
                android:background="@drawable/price_bg"
                android:text="Price : 140.00 ETB"/>

        </LinearLayout>



</RelativeLayout>
